@model Product_Inventory_System.Models.Category

@{
    ViewBag.Title = "Edit";
}

<style>
    .i {
        padding: 15px;
    }

    body {
        background-color: #B0E0E6;
        font-family: 'Book Antiqua';
        font-size: 1.5rem;
    }

    .save {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>
<div class="i">
