@model Product_Inventory_System.Models.Product

@{
    ViewBag.Title = "Delete";
}

<style>
    .k {
        padding: 15px;
    }

    body {
        background-color: #B0E0E6;
        font-family: 'Book Antiqua';
        font-size: 1.5rem;
    }
</style>

<div class="k">

