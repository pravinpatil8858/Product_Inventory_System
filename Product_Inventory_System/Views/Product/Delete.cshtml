        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Product Name:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Product_Name)
            </dd>

            <dt>
                @Html.DisplayName("Quantity:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                @Html.DisplayName("Overall Price:")
